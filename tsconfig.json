{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "types": ["bun-types"],
    "allowImportingTsExtensions": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
